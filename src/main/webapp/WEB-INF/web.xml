<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>MaintServlet</servlet-name>
        <servlet-class>com.maint.manager.service.servlets.MaintServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>BasicServlet</servlet-name>
        <servlet-class>com.maint.manager.service.servlets.BasicServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>MaintServlet</servlet-name>
        <url-pattern>/maints</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>BasicServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

</web-app>